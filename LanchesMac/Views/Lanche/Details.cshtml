@model Lanche

<div class="container">
	<div class="row">
		<div class="card">
			<div class="text-center">
				<img src="@Model.ImagemUrl" class="img-fluid" alt=""/>
			</div>

			<div class="card-block">
				<h2 class="card-title">@Model.DescricaoCurta</h2>

				<p class="btn btn-group align-content-lg-end">
					<a asp-controller="Lanche" asp-action="List" class="btn btn-outline-info">
						Ver todos os lanches
					</a>

					<a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompras"
						asp-action="AdicionarItemCarrinhoCompra" asp-route-lancheId="@Model.LancheId">
						Adicionar @Model.Nome ao carrinho
					</a>
				</p>

			</div>
		</div>
	</div>
</div>
